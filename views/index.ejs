<script type="text/javascript">
$(document).ready(function() {
    $('#loginpop1').hide();
    $("#hodertext").hide();
});

$("#loginpop").click(function() {
    if ($("#loginpop1").is(':visible') == false) {
        $("#navibar").css("background-color", "transparent")
        $('#loginpop1').show();
    } else {
        $('#loginpop1').hide();
    }
});
$("#expander").click(function() {
    if ($("#hodertext").is(':visible') == false) {
        $('#hodertext').show();
        $("#expander").hide();
    } else {
        $('#hodertext').hide();
    }
});
$("#showless").click(function() {
    if ($("#hodertext").is(':visible') == false) {
        $('#hodertext').show();

    } else {
        $('#hodertext').hide();
        $("#expander").show();
    }
});


$("#logginingin").click(function() {
    var obj = {
        username: $("#username").val(),
        password: $('#password').val()
    };
    $.ajax({
        url: '/login',
        method: "get",
        data: obj,
        success: function(data) {
            console.log(data);
            if ((data.status == "success") && (data.data == "1")) {
                swal("successfully logged in");
                setTimeout(function() {
                    location.reload(true);
                }, 2000)
            } else {
                swal('error while loggin in');
            }
        },
        error: function(err) {

        }
    })
})
</script>